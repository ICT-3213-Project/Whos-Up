<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lightning.structby.whosup.SignUpActivity">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="4"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello!"
                android:textSize="40sp"
                android:textColor="#222222"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Create an account to continue"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:onClick="selectImage"
            android:background="@drawable/register_profile_picture"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />
        <!--<com.makeramen.roundedimageview.RoundedImageView-->
            <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
            <!--android:layout_width="100dp"-->
            <!--android:layout_height="100dp"-->
            <!--app:riv_corner_radius_bottom_left="20dp"-->
            <!--app:riv_corner_radius_bottom_right="20dp"-->
            <!--app:riv_corner_radius_top_left="20dp"-->
            <!--app:riv_corner_radius_top_right="20dp"-->
            <!--android:onClick="selectImage"-->
            <!--android:background="@android:color/holo_blue_dark"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_alignParentBottom="true"/>-->

    </RelativeLayout>



    <EditText
        android:id="@+id/personNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="@android:color/transparent"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_weight="2"
        android:hint="Name"
        android:textSize="20sp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textSize="20sp"
        android:id="@+id/emailEditText"
        android:background="@android:color/transparent"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_weight="2"
        android:hint="E-mail"/>

    <EditText
        android:id="@+id/passwordeditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:hint="Password"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_weight="2"
        android:background="@android:color/transparent"/>


    <EditText
        android:id="@+id/descriptioneditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:textSize="20sp"
        android:hint="Short Description"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_weight="2"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/signupbutton"
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="30dp"
        android:layout_weight="4"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:paddingLeft="0dp"
        android:textColor="@android:color/holo_blue_dark"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:onClick="signup"/>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="Already have an account? "/>

        <TextView
            android:id="@+id/signuptextView"
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@android:color/holo_blue_dark"
            android:onClick="openSignIn"/>

    </LinearLayout>
</LinearLayout>