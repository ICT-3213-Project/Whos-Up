<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lightning.structby.whosup.SignUpActivity">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello!"
                fontPath="fonts/sfui.ttf"
                android:textSize="35sp"
                android:paddingBottom="5dp"
                android:textColor="#222222"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                fontPath="fonts/sfui.ttf"
                android:text="Create an account"/>
        </LinearLayout>


        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profileImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:riv_corner_radius_bottom_left="10dp"
            app:riv_corner_radius_bottom_right="10dp"
            app:riv_corner_radius_top_left="10dp"
            app:riv_corner_radius_top_right="10dp"
            android:onClick="selectImage"
            app:riv_mutate_background="true"
            android:background="@drawable/defaultdp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>



    <EditText
        android:id="@+id/personNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:background="@android:color/transparent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        fontPath="fonts/sfui.ttf"
        android:hint="Name"
        android:textSize="20sp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textSize="20sp"
        android:id="@+id/emailEditText"
        android:background="@android:color/transparent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        fontPath="fonts/sfui.ttf"
        android:hint="E-mail"/>

    <EditText
        android:id="@+id/passwordeditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:hint="Password"
        fontPath="fonts/sfui.ttf"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@android:color/transparent"/>


    <EditText
        android:id="@+id/descriptioneditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences"
        android:textSize="20sp"
        android:hint="Short Description"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        fontPath="fonts/sfui.ttf"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/signupbutton"
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        android:textSize="25sp"
        fontPath="fonts/sfui.ttf"
        android:paddingLeft="0dp"
        android:textColor="@android:color/holo_blue_dark"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:onClick="signup"/>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            fontPath="fonts/sfui.ttf"
            android:layout_gravity="center"
            android:text="Already have an account? "/>

        <TextView
            android:id="@+id/signuptextView"
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            fontPath="fonts/sfui.ttf"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="@android:color/holo_blue_dark"
            android:onClick="openSignIn"/>

    </LinearLayout>
</LinearLayout>